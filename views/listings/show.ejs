<% layout('layouts/boilerplate') -%>
<div class="row">
  <div class="card col-6 offset-3 row mt-2">
    <h3 class="text-center">Listing Details</h3>
    <img
      src="<%= listing.image%>"
      class="card-img-top show-img"
      alt="Listing image"
    />
    <div class="mt-0 pt-1 card-body">
      <div class="card-text">
        <b><%= listing.title%> </b><br />
        <%=listing.description%> <br />
        <b>PKR </b><%=listing.price.toLocaleString("ur-PK")%> <br />
        <%=listing.location%> <br />
        <%=listing.country%> <br /><br />
        <div class="row">
          <a
            href="/listings/<%=listing._id%>/edit"
            class="btn btn-danger col-2 mx-2"
            >Edit
          </a>
          <form
            action="/listings/<%=listing._id%>?_method=DELETE"
            method="POST"
            class="col-3"
          >
            <button class="btn btn-primary">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
